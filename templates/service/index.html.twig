{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette
{% endblock %}

{% block content %}
	<div class="breadcrumbs">
		<div class="col-sm-4">
			<div class="page-header float-left"></div>
		</div>
		<div class="col-sm-8">
			<div class="page-header float-right">
				<div class="page-title">
					<ol class="breadcrumb text-right">
						<li>
							<a href="{{ path("cms_dashboard") }}">Dashboard</a>
						</li>
						<li class="active">list category</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="content mt-3">
		<div class="animated fadeIn">
			<div class="row">
				<div class="col-md-12">
				  <div class="header">
                            <h4 style="text-align:center;">Service Manager</h4>
                        </div>
					<div class="card-body">
						{% for message in app.flashes('danger') %}
							<div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert">
								<span class="badge badge-pill badge-danger">Warning</span>
								{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
						{% for message in app.flashes('success') %}
							<div class="sufee-alert alert with-close alert-success alert-dismissible fade show" role="alert">
								<span class="badge badge-pill badge-success">Success</span>
								{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true"></span>
								</button>
							</div>
						{% endfor %}
						<table id="bootstrap-data-table-export" class="table bordered" style="width:60%;">
							<thead style="background-color: #85A6B8; color: white;">
								<tr>
									<th>&nbsp;&nbsp;&nbsp;&nbsp;
										<a href="{{ path("category_addService") }}" class="btn btn-success btn-sm">
											<i class="fa fa-plus mr-0"> &nbsp;&nbsp;Add</i>&nbsp;
										</a>
										&nbsp;&nbsp;&nbsp;Services&nbsp;&nbsp;&nbsp;&nbsp;
									</th>
									<th>&nbsp;&nbsp;&nbsp;&nbsp;
										<a href="{{ path("category_add")}}" class="btn btn-success btn-sm">
											<i class="fa fa-plus mr-0"> &nbsp;&nbsp;Add</i>&nbsp;
										</a>
										&nbsp;&nbsp;&nbsp;Categories&nbsp;&nbsp;&nbsp;&nbsp;
									</th>
								</tr>
							</thead>
							<tbody>
								{% for service in service %}
									<tr>
										<td>{{ service.0.name }}
										</td>
										<td>
											{% for cat in service.1 %}
												<li style="list-style:none;">{{cat.category}}</li>
											{% endfor %}
										</td>

									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- .animated --></div><!-- .content -->
<script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
<script src="{{asset('assets/js/main.js')}}"></script>

<script src="../vendors/datatables.net/js/jquery.dataTables.min.js"></script><script src="../vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script><script src="../vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script><script src="../vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script><script src="../vendors/jszip/dist/jszip.min.js"></script><script src="../vendors/pdfmake/build/pdfmake.min.js"></script><script src="../vendors/pdfmake/build/vfs_fonts.js"></script><script src="../vendors/datatables.net-buttons/js/buttons.html5.min.js"></script><script src="../vendors/datatables.net-buttons/js/buttons.print.min.js"></script><script src="../vendors/datatables.net-buttons/js/buttons.colVis.min.js"></script><script src="../assets/js/init-scripts/data-table/datatables-init.js"></script>{% endblock %}
