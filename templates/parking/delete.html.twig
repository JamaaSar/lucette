{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette{% endblock %}

{% block content %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">

            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="{{ path("cms_dashboard") }}">Dashboard</a></li>
                        <li><a href="{{ path("parking_list") }}">Parkings</a></li>
                        <li><a href="{{ path("parking_detail", {'id': id}) }}">Details</a></li>
                        <li class="active">Images</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">


                        <div class="card-body">
                            {% for message in app.flashes('success') %}
                                <div class="sufee-alert alert with-close alert-success alert-dismissible fade show" role="alert">
                                    <span class="badge badge-pill badge-success">Success</span>
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                            <table class="table table-striped bordered">
                                <thead style="background-color: #85A6B8; color: white;">
                                <tr>
                                    <th>Photo</th>
                                    <th><a href="{{ path("parking_detail", {'id': id}) }}" class="btn btn-danger btn-sm">
                                                Return
                                            </a></th>
                                </tr>
                                </thead >
                                <tbody>
                                    {% for image in images %}
                                        <tr>

                                            <td><img class="d-block" src="{{asset('uploads/parking/{{ image.name }}')}}" style="height: 200px" alt="slide"></td>

                                            <td>
                                                <a onclick="return confirm('Do you want to delete this Photo?')" href="{{ path("parking_removephoto", {'id': image.id, 'idparking': id}) }}" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-trash-o mr-0"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->

    <script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
  	<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
  	<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
  	<script src="{{asset('assets/js/main.js')}}"></script>


{% endblock %}
