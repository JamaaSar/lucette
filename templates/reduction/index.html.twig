{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette
{% endblock %}

{% block content %}
	<div class="breadcrumbs">
		<div class="col-sm-4">
			<div class="page-header float-left"></div>
		</div>
		<div class="col-sm-8">
			<div class="page-header float-right">
				<div class="page-title">
					<ol class="breadcrumb text-right">
						<li>
							<a href="{{ path("cms_dashboard") }}">Dashboard</a>
						</li>
						<li class="active">Reductions</li>
					</ol>
				</div>
			</div>
		</div>
	</div>

	<div class="content mt-3">
		<div class="animated fadeIn">
			<div class="row">

				<div class="col-md-12">

					<div class="header">
						<h4 style="text-align:center;">Reductions</h4>
					</div>
					<div class="card-body">
						<table id="bootstrap-data-table-export" class="table table-striped bordered">
							<thead style="background-color: #85A6B8; color: white;">
								<tr>
									<th>Code</th>
									<th>Montant</th>
									<th>
										<a href="{{ path("reduction_add") }}" class="btn btn-success btn-sm">
											<i class="fa fa-plus mr-0"></i>&nbsp;Nouveau
										</a>
									</th>
								</tr>
							</thead>
							<tbody>
								{% for reduction in reductions %}
									<tr>
										<td>{{ reduction.code }}</td>
										<td>{{ reduction.reduction|number_format(2, '.', ',') }}â‚¬</td>
										<td>
											<a href="{{ path("reduction_modifier", {'id': reduction.id}) }}" class="btn btn-info btn-sm">
												<i class="fa fa-pencil mr-0"></i>
											</a>
											<a onclick="return confirm('Voulez vous vraiment supprimer ce code?')" href="{{ path("reduction_delete", {'id': reduction.id}) }}" class="btn btn-danger btn-sm">
												<i class="fa fa-trash-o mr-0"></i>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>


		</div>
	</div>
	<!-- .animated -->
</div>
<!-- .content -->

<script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
