{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette
{% endblock %}

{% block content %}
	<div class="breadcrumbs">
		<div class="col-sm-4">
			<div class="page-header float-left"></div>
		</div>
		<div class="col-sm-8">
			<div class="page-header float-right">
				<div class="page-title">
					<ol class="breadcrumb text-right">
						<li>
							<a href="{{ path("cms_dashboard") }}">Dashboard</a>
						</li>
						<li>
                        <a href="{{ path("provider_list") }}">Provider</a>

						</li>
						<li class="active">Detail Provider</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
<div class="content mt-3">
	<div class="animated fadeIn">
		<div class="row">
			<div class="col-lg-4">
				<div class="card">
					<div class="card-header">
						<strong class="card-title">Description</strong>
					</div>
					<div class="card-body">

						<table class="table table-striped bordered">
							<tbody>
								<tr>
									<td>Provider</td>
									<td>{{ provider.name|capitalize }}</td>
								</tr>
								<tr>
									<th>Address</th>
									<td>{{ provider.address|raw }}</td>
								</tr>
								<tr>
									<th>Address2</th>
									<td>{{ provider.address2|raw }}</td>
								</tr>
								<tr>
									<th>Postal Code</th>
									<td>{{ provider.postalCode|raw }}</td>
								</tr>
								<tr>
									<th>City</th>
									<td>{{ provider.city|raw }}</td>
								</tr>
								<tr>
									<th>Type</th>
									<td>{{ provider.country|raw }}</td>
								</tr>
								<tr>
									<th>Tva</th>
									<td>{{ provider.tva }}</td>
								</tr>
							</tbody>
						</table>
						<a href="{{ path("provider_edit", {'id': provider.id}) }}" class="btn btn-info">
							<i class="fa fa-pencil-square-o"></i>&nbsp;Modifier</a>

						<a onclick="return confirm('Do you want to delete the product {{ provider.name }}?')" href="{{ path("provider_delete", {'id': provider.id}) }}" class="btn btn-danger">
							<i class="fa fa-trash-o"></i>&nbsp;Delete</a>
						<a href="{{ path("provider_list") }}" class="btn btn-danger">Return</a>
					</div>
				</div>
			</div>
		<div class="col-lg-8">
		<div class="card">
		<div class="card-header">
			<strong class="card-title">Workers</strong>
		</div>

			<div class="card-body">
				{% for message in app.flashes('success') %}
					<div class="sufee-alert alert with-close alert-success alert-dismissible fade show" role="alert">
						<span class="badge badge-pill badge-success">Success</span>
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
			<table class="table table-striped table-bordered">
				<thead style="background-color: #85A6B8; color: white;">

					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Role</th>
						<th>
						<a href="{{ path("provider_listdesworker", {'id': provider.id}) }}" class="btn btn-success btn-sm">
							<i class="fa fa-plus mr-0"></i>&nbsp;Add Workers
						</a>
						</th>

					</tr>
				</thead>
				<tbody>
					{% for client in clients %}
						<tr>
							<td>{{ client.firstName }}</td>
							<td>{{ client.lastName }}</td>
							<td>
								{% for item in client.roles %}
									{{ item }}
								{% endfor %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>

<div class="col-lg-8">
	<div class="card">
<div class="card-header">
<strong class="card-title">Cat√©gorie</strong>

</div>
		<div class="card-body">
			{% for message in app.flashes('success') %}
				<div class="sufee-alert alert with-close alert-success alert-dismissible fade show" role="alert">
					<span class="badge badge-pill badge-success">Success</span>
					{{ message }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			{% endfor %}
				<table class="table table-striped table-bordered">
				<thead style="background-color: #85A6B8; color: white;">
					<tr>
						<th>Category</th>
						<th>
							<a href="{{ path("provider_addcatprovider", {'id': provider.id}) }}" class="btn btn-success btn-sm">
								<i class="fa fa-plus mr-0"></i>&nbsp;Add Category
							</a>
						</th>
					</tr>
				</thead>
				<tbody>
				{% for cat in catProvider %}
					<tr>
						<td>{{cat.idcategory.category}}
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>

		</div>
	</div>
</div>



	</div>
</div>
<script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
<script src="{{asset('assets/js/main.js')}}"></script>
{% endblock %}
