{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette
{% endblock %}

{% block content %}
	<div class="breadcrumbs">
		<div class="col-sm-4">
			<div class="page-header float-left"></div>
		</div>
		<div class="col-sm-8">
			<div class="page-header float-right">
				<div class="page-title">
					<ol class="breadcrumb text-right">
						<li>
							<a href="{{ path("cms_dashboard") }}">Dashboard</a>
						</li>
						<li>
							<a href="{{ path("category_index") }}">List category</a>
						</li>
						<li>
							<a href="{{ path("category_edit", {'id': cat.id}) }}"></a>
						</li>

						<li class="active">Edit Category </li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="content mt-3">
		<div class="animated fadeIn">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<strong class="card-title">Edit Service</strong>
						</div>
						<div class="card-body">
							<div class="tile col-lg-4">
								{% for message in app.flashes('danger') %}
									<div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert">
										<span class="badge badge-pill badge-danger">Warning</span>
										{{ message }}
										<button type="button" class="close" data-dismiss="alert" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
								{% endfor %}
								{{ form_start(form) }}
								<div class="form-group">
									{{ form_errors(form.category) }}
									{{ form_label(form.category) }}
									{{ form_widget(form.category, {'attr':{'class': 'form-control'  }}) }}
								</div>
								<div class="form-group">
									{{ form_errors(form.needCar) }}
									{{ form_label(form.needCar) }}
									{{ form_widget(form.needCar, {'attr':{'class': 'form-control'  }}) }}
								</div>
								<div class="form-group">
									{{ form_errors(form.image) }}
									{{ form_label(form.image) }}<br>
									{{ form_widget(form.image, {'attr':{'class': 'file-path validate' }}) }}
								</div>

									<div class="form-group">
									{{ form_errors(form.service) }}
									{{ form_label(form.service) }}<br>
									{{ form_widget(form.service, {'attr':{'class': 'file-path validate' }}) }}
								</div>
									<br>

								<button type="submit" class="btn btn-info">Edit</button>
								<a href="{{ path("category_index") }}" class="btn btn-danger">Return</a>

								{{ form_end(form) }}

							</div>

														<script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
														<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
														<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
														<script src="{{asset('assets/js/main.js')}}"></script>
						{% endblock %}
