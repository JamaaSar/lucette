{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette
{% endblock %}

{% block content %}
	<!DOCTYPE html>

	<div class="breadcrumbs">
		<div class="col-sm-4">
			<div class="page-header float-left"></div>
		</div>
		<div class="col-sm-8">
			<div class="page-header float-right">
				<div class="page-title">
					<ol class="breadcrumb text-right">
						<li>
							<a href="{{ path("cms_dashboard") }}">Dashboard</a>
						</li>
						<li class="active">Clients</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="content mt-3">
		<div class="animated fadeIn">

			<div class="col-md-12">
			<div class="header">
						<h4 style="text-align:center;">Clients</h4>
					</div>
				{% for message in app.flashes('success') %}
					<div class="sufee-alert alert with-close alert-success alert-dismissible fade show" role="alert">
						<span class="badge badge-pill badge-success">Success</span>
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}

				<table id="bootstrap-data-table-export" class="table bordered" style="padding-bottom: 4px;">

					<thead style="background-color: #85A6B8; color: white; ">
						<tr>
							<th>First name</th>
							<th>Last name</th>
							<th>Email</th>
							<th>Phone number</th>
							<th>Company code</th>
							<th>Number and Street</th>
							<th>ZIP</th>
							<th>City</th>
							<th>Creation</th>
							<th>Role</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for client in clients %}
							<tr>
								<td>{{ client.firstName }}</td>
								<td>{{ client.lastName }}</td>
								<td>{{ client.email }}</td>
								<td>{{ client.phoneNumber }}</td>
								<td>{{ client.codeCompany }}</td>
								<td>{{ client.numberAndStreet }}</td>
								<td>{{ client.zipCode }}</td>
								<td>{{ client.city }}</td>
								<td>{{ client.createdDate|date('Y-m-d') }}</td>
								<td>
									{% for item in client.roles %}
										{{ item }}
									{% endfor %}
								</td>
								<td>
									<a href="{{ path("client_modifier", {'id': client.id}) }}" class="btn btn-info btn-sm">
										<i class="fa fa-pencil mr-0"></i>
									</a>
									<a onclick="return confirm('Voulez vous vraiment supprimer cet utilisateur?')" href="{{ path("client_delete", {'id': client.id}) }}" class="btn btn-danger btn-sm">
										<i class="fa fa-trash-o mr-0"></i>
									</a>
								</td>

							</tr>

						{% endfor %}
						<br>
						<br>

					</tbody>

				</table>


</div></div></div></div><!-- .animated --></div><!-- .content -->


<script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
<script src="{{asset('assets/js/main.js')}}"></script>

<script src="../vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="../vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="../vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
<script src="../vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
<script src="../vendors/jszip/dist/jszip.min.js"></script>
<script src="../vendors/pdfmake/build/pdfmake.min.js"></script>
<script src="../vendors/pdfmake/build/vfs_fonts.js"></script>
<script src="../vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
<script src="../assets/js/init-scripts/data-table/datatables-init.js"></script>


{% endblock %}
