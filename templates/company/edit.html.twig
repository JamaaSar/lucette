{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette{% endblock %}

{% block content %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">

            </div>

        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="{{ path("cms_dashboard") }}">Dashboard</a></li>
                        <li><a href="{{ path("company_list") }}">Company</a></li>
                        <li class="active">Add Company</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content mt-3">
    <div class="animated fadeIn">
    <div class="row">

    <div class="col-md-12">
    <div class="card">
    <div class="card-header">
        <strong class="card-title">Add Company</strong>
    </div>
    <div class="card-body">
    <div class="tile col-lg-4" >
        {% for message in app.flashes('danger') %}
            <div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-danger">Warning</span>
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}


        {{ form_start(form) }}
        <div class="form-group">
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr':{'class': 'form-control'  }}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.address) }}
            {{ form_label(form.address) }}
            {{ form_widget(form.address, {'attr':{'class': 'form-control'  }}) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.phoneNumber) }}
            {{ form_label(form.phoneNumber) }}
            {{ form_widget(form.phoneNumber, {'attr':{'class': 'form-control' }}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.codeEntreprise) }}
            {{ form_label(form.codeEntreprise) }}
            {{ form_widget(form.codeEntreprise, {'attr':{'class': 'form-control' }}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.contactEntreprise) }}
            {{ form_label(form.contactEntreprise) }}
            {{ form_widget(form.contactEntreprise, {'attr':{'class': 'form-control' }}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.contactMailEntreprise) }}
            {{ form_label(form.contactMailEntreprise) }}
            {{ form_widget(form.contactMailEntreprise, {'attr':{'class': 'form-control' }}) }}
        </div>

            {{ form_errors(form.image) }}
            {{ form_label(form.image) }}<br>
            {{ form_widget(form.image, {'attr':{'class': 'file-path validate'}}) }}
        <br>
        <br>


        <button type="submit" class="btn btn-info">Modifier</button>
        <a href="{{ path("company_list") }}"  class="btn btn-danger">Retour</a>

        {{ form_end(form) }}


    </div>
    <script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
    <script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
    <script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
    <script src="{{asset('assets/js/main.js')}}"></script>
{% endblock %}
