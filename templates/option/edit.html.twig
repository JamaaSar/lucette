{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette{% endblock %}

{% block content %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">

            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="{{ path("cms_dashboard") }}">Dashboard</a></li>
                        <li><a href="{{ path("option_list") }}">Option</a></li>
                        <li class="active">Modifier Option</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content mt-3">
    <div class="animated fadeIn">
    <div class="row">

    <div class="col-md-12">
    <div class="card">
    <div class="card-header">
        <strong class="card-title">Modification Option</strong>
    </div>
    <div class="card-body">
    <div class="tile col-lg-4" >
        {% for message in app.flashes('danger') %}
            <div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-danger">Warning</span>
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}


        {{ form_start(form) }}
        <div class="form-group">
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr':{'class': 'form-control'  }}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.description) }}
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr':{'class': 'form-control'  }}) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="form-group">
            {{ form_errors(form.id_product) }}
            {{ form_label(form.id_product) }}
            {{ form_widget(form.id_product, {'attr':{'class': 'form-control' }}) }}
        </div>
	    <div class="form-group">
		{{ form_errors(form.commission) }}
		{{ form_label(form.commission) }}
		{{ form_widget(form.commission, {value: comm}) }}
	    </div>
        {% else %}
        <div class="form-group" style="display: none">
            {{ form_errors(form.id_product) }}
            {{ form_label(form.id_product) }}
            {{ form_widget(form.id_product, {'attr':{'class': 'form-control' }}) }}
        </div>
	    <div class="form-group" style="display: none">
		{{ form_errors(form.commission) }}
		{{ form_label(form.commission) }}
		{{ form_widget(form.commission, {value: comm}) }}
	    </div>
        {% endif %}


        <button type="submit" class="btn btn-info">Modifier</button>
        <a href="{{ path("option_list") }}"  class="btn btn-danger">Retour</a>

        {{ form_end(form) }}

    </div>
    <script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
  	<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
  	<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
  	<script src="{{asset('assets/js/main.js')}}"></script>
{% endblock %}
