{% extends 'layoutadmin.html.twig' %}

{% block title %}Lucette{% endblock %}



{% block content %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">

            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong id="title" class="card-title">Add Card</strong>
                        </div>
                        <div class="card-body">

                            <div class="col-lg-4">
                                <script src="https://js.stripe.com/v3/"></script>
                                <form id="payment-form" action="{{ path('user_addCard') }}" method="post">
                                    <div class="form-group">
                                        <label for="cardholder-name">
                                            Cardholder Name
                                        </label>
                                        <input class="form-control" name="cardholder-name" id="cardholder-name" type="text">
                                    </div>

                                    <div class="form-group">
                                        <label for="card-element">
                                            Credit card
                                        </label>

                                            <div id="card-element">
                                                <!-- A Stripe Element will be inserted here. -->
                                            </div>
                                    </div>

                                    <div id="card-errors" role="alert"></div>
                                    <button class="btn btn-success" id="card-button" data-secret="<?= $intent->client_secret ?>">
                                        Add Card
                                    </button>
                                </form>


                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div><!-- .animated -->


    <link rel="stylesheet" href="../{{asset('assets/css/checkbox.css')}}">

    <script src="{{asset('vendors/jquery/dist/jquery.min.js')}}"></script>
  	<script src="{{asset('vendors/popper.js/dist/umd/popper.min.js')}}"></script>
  	<script src="{{asset('vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
  	<script src="{{asset('assets/js/main.js')}}"></script>

    <script src="{{asset('assets/js/order.js')}}"></script>
    <script src="{{asset('assets/js/events.js')}}"></script>
    <script src="{{asset('assets/js/stripe.js')}}"></script>



{% endblock %}
